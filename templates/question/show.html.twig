{% extends 'base.html.twig' %}

{% block title %}Question
{% endblock %}

{% block header %}
	{% include '_navbar.html.twig' %}
{% endblock %}

{% block body %}
	<main class="admin-pages m-auto">
		<h1>Question
			{{ question.number }}</h1>

		{% if question.picture %}
			<div class="row justify-content-center m-auto">

				<div class="col-10">
					<img class="question-picture" src="{{ asset('build/images/' ~ question.picture) }}" alt="{{ question.answer1 }}">
				</div>
			</div>
		{% endif %}

		<table class="table">
			<tbody>
				<tr>
					<th>Question</th>
					<td>{{ question.question }}</td>
				</tr>
				<tr>
					<th>Option 1</th>
					<td>{{ question.answer1 }}</td>
				</tr>
				<tr>
					<th>Option 2</th>
					<td>{{ question.answer2 }}</td>
				</tr>
				<tr>
					<th>Option 3</th>
					<td>{{ question.answer3 }}</td>
				</tr>
				<tr>
					<th>Option 4</th>
					<td>{{ question.answer4 }}</td>
				</tr>
				<tr>
					<th>Bonne option</th>
					<td>{{ question.correctAnswer }}</td>
				</tr>
				{% if question.picture %}
					<tr>
						<th>Image</th>
						<td>{{ question.picture }}</td>
					</tr>
				{% endif %}
			</tbody>
			<tr>
				<th>Auteur</th>
				<td>{{ question.author.pseudo }}</td>
			</tr>
		</table>

		<a href="{{ path('app_question_index') }}">Retour Ã  la liste</a>

		<a href="{{ path('app_question_edit', {'id': question.id}) }}">Modifier</a>

		{{ include('question/_delete_form.html.twig') }}
	</main>
{% endblock %}
