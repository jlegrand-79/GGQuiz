{% extends 'base.html.twig' %}

{% block title %}Question
{% endblock %}

{% block header %}
	{% include '_navbar.html.twig' %}
{% endblock %}

{% block body %}
	<main class="admin-pages m-auto">
		<h1>{{ question.question }}</h1>

		{% if question.picture %}
			<div class="row justify-content-center m-auto">

				<div class="col-10">
					<img class="question-picture" src="{{ asset('build/images/' ~ question.picture) }}" alt="{{ question.picture }}">
				</div>
			</div>
		{% endif %}

		<table class="table">
			<tbody>
				<tr>
					<th>Option 1</th>
				</tr>
				<tr>
					<td>{{ question.answer1 }}</td>
				</tr>
				<tr>
					<th>Option 2</th>
				</tr>
				<tr>
					<td>{{ question.answer2 }}</td>
				</tr>
				<tr>
					<th>Option 3</th>
				</tr>
				<tr>
					<td>{{ question.answer3 }}</td>
				</tr>
				<tr>
					<th>Option 4</th>
				</tr>
				<tr>
					<td>{{ question.answer4 }}</td>
				</tr>
				<tr>
					<th>Bonne option</th>
				</tr>
				<tr>
					<td>{{ question.correctAnswer }}</td>
				</tr>
				{% if question.picture %}
					<tr>
						<th>Image</th>
					</tr>
					<tr>
						<td>{{ question.picture }}</td>
					</tr>
				{% endif %}
			</tbody>
			<tr>
				<th>Auteur</th>
			</tr>
			<tr>
				<td>{{ question.author.pseudo }}</td>
			</tr>
			<tr>
				<th>Dans quel(s) Quiz(zes) ?</th>
			</tr>
			<tr>
				<td>
					<div>
						<ul class="list-group list-group-flush">
							{% for quiz in question.quizzes %}
								<li class="list-group-item bg-light">{{ quiz.name }}</li>
							{% endfor %}
						</ul>
					</div>
				</td>
			</tr>
		</table>

		<a href="{{ path('app_question_index') }}">Retour Ã  la liste</a>

		<a href="{{ path('app_question_edit', {'id': question.id}) }}">Modifier</a>

		{{ include('question/_delete_form.html.twig') }}

		<p>
			<a href="{{ path('app_admin') }}">Administration</a>
		</p>

	</main>
{% endblock %}
