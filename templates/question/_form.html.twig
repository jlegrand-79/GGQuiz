{{ form_start(form, {'attr': {'class': 'form'}}) }}

<div class="form-group">
	{{ form_row(form.question) }}
</div>

<div class="form-group">
	{{ form_row(form.answer1) }}
</div>

<div class="form-group">
	{{ form_row(form.answer2) }}
</div>

<div class="form-group">
	{{ form_row(form.answer3) }}
</div>

<div class="form-group">
	{{ form_row(form.answer4) }}
</div>

<div class="form-group">
	{{ form_row(form.correctAnswer) }}
</div>

<div class="form-group">
	{{ form_row(form.picture) }}
</div>

<div class="form-group">
	<fieldset>
		{{ form_label(form.quizzes) }}
		{{ form_widget(form.quizzes, {'attr': {'class': 'd-grid'}}) }}
	</fieldset>
</div>

<button class="btn btn-primary" type="submit">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
