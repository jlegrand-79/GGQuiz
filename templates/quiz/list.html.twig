{% extends 'base.html.twig' %}

{% block title %}Choisissez votre quiz
{% endblock %}

{% block body %}
	<h1>Choisissez votre quiz</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Title</th>
				<th>Cover</th>
			</tr>
		</thead>
		<tbody>
			{% for quiz in quizzes %}
				<tr>
					<td>{{ quiz.name }}</td>
					<td>{{ quiz.title }}</td>
					<td>{{ quiz.cover }}</td>
					<td>
						<a href="{{ path('app_quiz_start', {'id': quiz.id}) }}">JOUER</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">AUCUN QUIZ DISPONIBLE</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
