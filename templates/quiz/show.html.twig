{% extends 'base.html.twig' %}

{% block title %}Quiz
{% endblock %}

{% block body %}
	<h1>Quiz</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ quiz.id }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ quiz.title }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ quiz.description }}</td>
			</tr>
			<tr>
				<th>Cover</th>
				<td>{{ quiz.cover }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ quiz.name }}</td>
			</tr>
		</tbody>
	</table>
	<div>
		<h2>Questions</h2>

		<pre>
            {{ dump(quiz) }}
        </pre>

		{# <ul>
			{% for question in quiz.questions %}
				<li>{{ question.title }}</li>
			{% endfor %}
		</ul> #}
	</div>
	<a href="{{ path('app_quiz_index') }}">back to list</a>

	<a href="{{ path('app_quiz_edit', {'id': quiz.id}) }}">edit</a>

	{{ include('quiz/_delete_form.html.twig') }}
